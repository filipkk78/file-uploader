<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
    <title>File Uploader</title>
  </head>
  <body>
    <div class="wrapper">
      <%- include('header') %>
      <main>
        <h1>Welcome to Moogle Drive</h1>
        <% if (!locals.user) {%>
        <p>You must log in or create an account to proceed</p>
        <% } else {%>
        <p>Welcome back <%= `${user.name}` %></p>
        <% if (locals.user.folders) {%>
        <ul>
          <% locals.user.folders.forEach(function(folder) { %>
          <li class="folder">
            <%= folder.name %>
            <form action="/updatefolder" method="post">
              <input type="hidden" name="folderId" value="<%=folder.id%>" />
              <input
                type="text"
                name="updatedFolderName"
                id="updatedFolderName"
                required
              />
              <button type="submit">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  fill="currentColor"
                  viewBox="0 0 16 16"
                >
                  <path
                    d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325"
                  />
                </svg>
              </button>
            </form>
            <form action="/deletefolder" method="post">
              <input type="hidden" name="folderId" value="<%=folder.id%>" />
              <button type="submit">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  fill="red"
                  viewBox="0 0 16 16"
                >
                  <path
                    d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"
                  />
                  <path
                    d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"
                  />
                </svg>
              </button>
            </form>
          </li>
          <% }); %>
          <li class="folder">
            <form action="/newfolder" method="post">
              <label for="folderName">New folder</label>
              <input type="text" id="folderName" name="folderName" required />
              <button type="submit">+</button>
            </form>
          </li>
        </ul>
        <% } }%>
        <a href="/details">File details</a>
      </main>
      <%- include('footer') %>
    </div>
  </body>
</html>
