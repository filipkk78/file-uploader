generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  name     String
  password String   @db.VarChar(255)
  folders  Folder[]
}

model Folder {
  id          Int      @id @default(autoincrement())
  name        String
  createdAt   DateTime @default(now())
  folderFiles File[]
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
}

model File {
  id        Int      @id @default(autoincrement())
  name      String
  link      String
  size      String
  createdAt DateTime @default(now())
  folder    Folder   @relation(fields: [folderId], references: [id])
  folderId  Int
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}
